<!--            android:layout_width="fill_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:padding="@dimen/activity_horizontal_margin"-->
<!--            android:text="Demo"-->
<!--            android:textColor="#000" />-->

        <TextView
            android:id="@+id/typeText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="Demo"
            android:textColor="#000" />
    </LinearLayout>

</LinearLayout>